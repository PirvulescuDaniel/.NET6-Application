
@{
    ViewData["Title"] = "Index";
}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/stylesheet1.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  </head>

  <body onload="typeWriter()">

     <div id="big">
         <p id="type-effect"></p>
     </div>
     
        <script>
            var i = 0;
            var txt = 'Share the destination with family, friends and many others at the lowest price.';
            var speed = 30;

            function typeWriter() {
              if (i < txt.length) {
                document.getElementById("type-effect").innerHTML += txt.charAt(i);
                i++;
                setTimeout(typeWriter, speed);
              }
            }
        </script>

        <div class="row">

            <div class="col-sm-4">
                <img class="presentationImg" src = "/Resources/share.png">
            </div>

            <div class="col-sm-8">
                <p class="presentation">Daily ride sharing: at work, supermarket, short trips around town or long vacations.</p>
            </div>

        </div>

        <div class="row">

            <div class="col-sm-8">
                <p class="presentation">Forget gas stations and enjoy the ease and maneuverability of an electric car.</p>
            </div>

            <div class="col-sm-4">
                <img class="presentationImg" src="/Resources/electric-car.png">
            </div>

        </div>

        <div class="row">

            <div class="col-sm-4">
                <img class="presentationImg" src = "/Resources/car-repair.png">
            </div>

            <div class="col-sm-8">
                <p class="presentation">Don't worry about possible maintenance and repairs. We offer a plan for of all this.</p>
            </div>
        </div>

        <div class="container">
            <h1 style="text-align:center; color:#4db8ff;">Find Us:</h1>
        </div>

        <div class="container" style="margin-top:3%;">
                <div class="mapouter"><div class="gmap_canvas"><iframe width="100%" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=2880%20Broadway,%20New%20York&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.whatismyip-address.com"></a><br><style>.mapouter{position:relative;text-align:right;height:500px;width:100%px;}</style><a href="https://www.embedgooglemap.net">embedgooglemap.net</a><style>.gmap_canvas {overflow:hidden;background:none!important;height:500px;width:100%;}</style></div></div>
        </div>
   
        <div class="container" style="margin-top: 3%;">
            <h1 style="text-align:center; font-size:32px; color: #4db8ff;">Sign up to get all benefits!</h1>
        </div>

        <div class="container" style="border-left: solid; border-right:solid; border-width:1px; ">
       
           <div class="col-sm-6" style = "margin:auto;">
                <button type="button" class="btn btn-primary" style="width:100%; height:50px;">Sign up</button>
           </div>
                
           <div class="col-sm-6" style="margin:auto; margin-top:30px;"> 
                <button type="button" class="btn btn-primary" style="width:100%; height:50px;">I already have an account</button>
           </div>

       </div>
      
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  </body>

</html>